{% extends '_base.html.twig' %}

{# ------------------------------------------------- #}
{% block pageTitle %}Add Student{% endblock %}

{# ------------------------------------------------- #}
{% block addStudentLinkStyle %}current_page{% endblock %}

{# ------------------------------------------------- #}

{% block main %}

    <div id="addStudentContainer">

        <div id="addStudentMain">

            <h1>
                (Add Student Page)
            </h1>

            <h2>Students</h2>

            <form method="post" action="/addStudentForm">
                <table>
                    <tr>
                        <th>First name</th>
                        <th>Surname</th>
                        <th>Current Belt Grading</th>
                        <th>Next Belt Grading Syllabus</th>
                        <th>Current Status</th>
                        <th>Required Status</th>
                        <th>Next Grading</th>
                        <th>Admin</th>
                        <th></th>
                    </tr>

                    <!--calls from the Student.php class the following methods-->
                    {% for student in students %}
                        <tr>
                            <td>{{ student.firstName }}</td>
                            <td>{{ student.surname }}</td>
                            <td>{{ student.currentBeltGrade }}</td>
                            <td>{{ student.nextBeltGradingSyllabus }}</td>
                            <td>{{ student.currentStatus }}</td>
                            <td>{{ student.requiredStatus }}</td>`
                            <td>{{ student.nextGrading }}</td>
                            <td>{{ student.role }}</td>
                            <td></td>
                        </tr>
                    {% endfor %}
                    <tr></tr>
                    <tr></tr>

                    <tr>
                        <td><input type="text" name="firstName"autofocus></td>
                        <td><input type="text" name="surname"></td>
                        <td><input type="text" name="currentBeltGrading"></td>
                        <td><input type="text" name="nextBeltGradingSyllabus"></td>
                        <td><input type="text" name="currentStatus"></td>
                        <td><input type="text" name="requiredStatus"></td>
                        <td><input type="text" name="nextGrading"></td>
                        <td><input type="number" name="role"></td>
                        <td><input type="submit" name="Add" value="Add"></td>
                    </tr>

                </table>
            </form>
        </div>

    </div>

{% endblock %}